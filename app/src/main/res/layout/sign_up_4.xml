<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:padding="20dp">

    <ImageView
        android:layout_width="13dp"
        android:layout_height="18dp"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/createtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="Sign up"
        android:textSize="15sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/nametextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Verify OTP"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vertextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Please enter the code we sent you to email"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textStyle="bold" />






        <com.otpview.OTPTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            app:otp_text_size="20dp"
            app:bar_enabled="true"
            app:bar_error_color="@color/red"
            app:bar_active_color="@color/black"
            app:bar_inactive_color="@android:color/darker_gray"
            app:hide_otp_drawable="@drawable/bg_otp_box_hide"
            app:bar_success_color="#33cc33"
            app:bar_margin_bottom="0dp"
            app:bar_margin_left="2dp"
            app:bar_margin_right="2dp"
            app:bar_height="1.5dp"
            app:box_margin="0dp"
            app:height="40dp"
            app:width="40dp"
            app:hide_otp="true"
            app:length="4"
            app:otp=""
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/ver2textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Didnâ€™t Receive OTP ?"
            android:textSize="15sp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/vert3extView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Resend Code"
            android:textSize="18sp"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:text="3 of 3"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="100" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green"
            android:padding="10dp"
            android:text="Sign up"
            android:textSize="20sp" />

    </LinearLayout>



</RelativeLayout>